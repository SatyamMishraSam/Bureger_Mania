<section class="status">
    <div class="container mx-auto">
        <div class=" status-box w-2/3 mx-auto">
            <div class="flex items-center justify-between mt-8">
                <h1 class="text-xl font-bold">Track Delievery Status</h1>
                <h5 class="px-4 text-green-500 text-md"> <%= order._id %>  </h5>

                <!-- from here we r passig the entire id to resources/app.js 
                bcz we need order to update the status for front end and we will access this id 
                -->
                <input id="hiddenInput" type="hidden" value="<%=JSON.stringify(order)  %> ">

            </div>

            <ul class="mt-10">
                <li class=" status_line text-xl pb-16" data-status= "order_placed" ><span>Order Placed </span></li>
                <li class=" status_line text-xl pb-16" data-status= "confirmed" ><span>Order Confirmed </span></li>
                <li class=" status_line text-xl pb-16" data-status= "prepared" ><span>Order Preparing </span></li>
                <li class=" status_line text-xl pb-16" data-status= "delivered" ><span>Out For Delievery</span></li>
                <li class=" status_line text-xl" data-status= "completed" ><span>Completed </span></li>
            </ul>


        </div>
    </div>
</section>