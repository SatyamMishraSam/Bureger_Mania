<section class="cart py-16">
  <% if(session.cart) { %>
  <div class="order container mx-auto xl:w-1/2">
      <div class="flex items-center border-b border-gray-600 pb-4">
          <img src="/img/cart-black.png" alt="">
          <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
      </div>
      <div class= burger-list">
          <% for(let burger of Object.values(session.cart.items)) { %>
          <div class="flex items-center my-8">
              <img class="w-24" src="/img/<%= burger.item.image %>" alt="">
              <div class="flex-1 ml-4">
                  <h1><%= burger.item.name %></h1>
                  <span><%= burger.item.size %></span>
              </div>
              <span class="flex-1"><%= burger.qty %> Pcs</span>
              <span class="font-bold text-lg">â‚¹ <%= burger.item.price * burger.qty %></span>
          </div>
          <%  } %>
      </div>
      <hr class="border-gray-600">
      <div class="text-right py-4">
          <div>
              <span class="text-lg font-bold">Total Amount:</span>
              <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice %></span>
          </div>
          <% if(user) { %>
          <div>
              <form action="/orders" method="POST" class="mt-12">
                   
                  <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text"
                      placeholder="Phone number">
                  <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                  <div class="mt-4">
                      <!-- <div id="card-element"></div> -->
                      <button class="btn px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order
                          Now</button>
                  </div>
              </form>
          </div>
          <% } else { %>
          <a href="/login"
              class="inline-block cursor-pointer btn px-6 py-2 rounded-full text-white font-bold mt-6">Login
              to continue</a>
          <% } %>
      </div>
  </div>
  <% } else { %>
  <div class="container mx-auto text-center">
        <h1 class="text-3xl font-bold mb-2">it's burger o'clock</h1>
        <p class="text-gray-500 text-lg mb-12"> I think you are hungry ðŸ˜¥ <br> Checkout our new items in the menu sections  </p>
        <img class="w-2/5 mx-auto"  src="/img/empty-cart.png" alt="empty-cart">
        <a href="/" class="inline-block px-6 py-2 rounded-full button text-white font-bold mt-12"> Go Back</a>
        <button class="m-10 px-8 py-4 rounded-full">Go Back</button>
    </div>
  <% } %>
</section>